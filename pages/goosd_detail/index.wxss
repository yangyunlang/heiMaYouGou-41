container{
  padding-bottom:100rpx;
}
.swiper{
  width:750rpx;
  height:750rpx;
}
.swiper image{
  width:750rpx;
  height:750rpx;
}

/* 商品详情 */
.info-wrapper{
  padding:20rpx;
}
.info-wrapper .price{
  font-size:22px;
  color:red;
}

.goods_info{
  display:flex;
  justify-content: space-between;
  align-items:center;
}
/* 字体溢出加。。。显示 */
.goods_title{
  flex:1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden
}

.goods_star{
  width:120rpx;
  display:flex;
  flex-direction:column;
  justify-content: center;
  align-items:center;
  margin-left:20rpx;
  color:#999;
  border-left:1px solid #ccc;
}
.goods_star text{
  font-size:13px;
}

.goods_other{
  margin-top:20rpx;
  font-size:14px;
  color:#999;
}

/* 底部按钮 */
.btns{
  display:flex;
  justify-content: space-between;
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  box-shadow: 0 -2px 2px #eee;
  background:#fff;
}
.btns > view{
  height:100rpx;
}

.btn-white{
  width:20%;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size:12px;
}
.btn-color{
  width:30%;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color:#fff;
  background:orange;
}
.btn-color:last-child{
    background: red;
}

/* 商品详情展示的tab栏 */
.tab{
    display: flex;
    border-top: 10px #eee solid;
}

 .tab-item{
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;

 }

 .tab-item.active{
    background: red;
    color:#fff;
}

 .attrs{
    padding: 20rpx;
}

 .attr-item{
    line-height: 2;
}

 .attr-item text{
    margin-right: 20rpx;
} 